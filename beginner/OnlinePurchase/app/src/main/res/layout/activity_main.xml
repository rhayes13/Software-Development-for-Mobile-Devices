<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="20dp"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/priceTv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:layout_gravity="left"
            android:padding="10dp"
            android:layout_marginRight="20dp"
            android:text="Price"
            android:textColor="@color/colorText"
            android:textSize="@dimen/textSize"
            android:background="@color/colorPrimary"/>

        <EditText
            android:id="@+id/priceEt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:layout_gravity="right"
            android:padding="10dp"
            android:inputType="numberDecimal"
            android:hint="0"
            android:textAlignment="center"
            android:textColor="@color/colorText"
            android:textSize="@dimen/textSize"
            android:background="@color/colorSecondary"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/warrantyTv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:layout_gravity="left"
            android:padding="10dp"
            android:layout_marginRight="20dp"
            android:text="Warranty"
            android:textColor="@color/colorText"
            android:textSize="@dimen/textSize"
            android:background="@color/colorPrimary"/>

        <ToggleButton
            android:id="@+id/warrantyToggle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:layout_gravity="right"
            android:padding="10dp"
            android:textOn="YES"
            android:textOff="NO"
            android:textAlignment="center"
            android:textColor="@color/colorText"
            android:textSize="@dimen/textSize"
            android:background="@color/colorSecondary"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/insuranceTv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:layout_gravity="left"
            android:padding="10dp"
            android:layout_marginRight="20dp"
            android:text="Insurance"
            android:textColor="@color/colorText"
            android:textSize="@dimen/textSize"
            android:background="@color/colorPrimary"/>

        <Switch
            android:id="@+id/insuranceSwitch"
            android:layout_width="0dp"
            android:layout_height="53.5dp"
            android:layout_weight="2"
            android:layout_gravity="right"
            android:padding="10dp"
            android:background="@color/colorSecondary"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/deliveryTv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:layout_gravity="left"
            android:padding="10dp"
            android:layout_marginRight="20dp"
            android:text="Delivery"
            android:textColor="@color/colorText"
            android:textSize="@dimen/textSize"
            android:background="@color/colorPrimary"/>

        <Spinner
            android:id="@+id/deliverySpinner"
            android:layout_width="0dp"
            android:layout_height="53.5dp"
            android:layout_weight="2"
            android:layout_gravity="right"
            android:textAlignment="center"
            android:entries="@array/days"
            android:padding="10dp"
            android:background="@color/colorSecondary"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/costTv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:layout_gravity="left"
            android:padding="10dp"
            android:layout_marginRight="20dp"
            android:text="Cost"
            android:textColor="@color/colorText"
            android:textSize="@dimen/textSize"
            android:background="@color/colorPrimaryLight"/>

        <TextView
            android:id="@+id/costOutput"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:layout_gravity="right"
            android:padding="10dp"
            android:hint="0"
            android:textAlignment="center"
            android:textColor="@color/colorText"
            android:textSize="@dimen/textSize"
            android:background="@color/colorSecondary"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/calculateButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="75dp"
            android:layout_marginRight="75dp"
            android:padding="10dp"
            android:text="CALCULATE"
            android:textColor="@color/colorText"
            android:textSize="@dimen/textSize"
            android:background="@color/colorButton"/>
    </LinearLayout>


</LinearLayout>